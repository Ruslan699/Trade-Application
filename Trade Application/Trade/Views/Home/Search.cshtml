@model List<Product>
@{
    ViewData["Title"] = "Search";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <div class="row">
        <h2>Search</h2>
        @foreach (Product item in Model)
        {
            <div class="col-sm-4 col-lg-4 col-md-4" style="height:530px;">
                <div class="thumbnail">
                    <img src="@item.ImageThumbnailUrl" style="height:350px;" alt="" />
                    <div class="caption">
                        <h3 class="pull-right">@item.Price.ToString("c")</h3>
                        <h3>
                            <a asp-controller="Home" asp-action="Bigsize" asp-route-productId="@item.ProductId">@item.Name</a>
                        </h3>
                        <p>@item.ShortDescription</p>
                    </div>
                    <div class="addToCart text-right">
                        <p class="button ">
                            <a class="btn btn-success " id="cartButton" asp-controller="ShoppingCart" asp-action="AddToShoppingCart" asp-route-productId="@item.ProductId">
                                Add to cart
                            </a>
                        </p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
<div style="margin-left:475px;margin-bottom:100px;">
    <nav aria-label="Page navigation example">
        <ul class="pagination">
            <li class="page-item"><a class="page-link" asp-action="Search" asp-route-name="@ViewBag.SearchWord" asp-route-page="0">Previous</a></li>
            <li class="page-item"><a class="page-link" asp-action="Search" asp-route-name="@ViewBag.SearchWord" asp-route-page="1">1</a></li>
            <li class="page-item"><a class="page-link" asp-action="Search" asp-route-name="@ViewBag.SearchWord" asp-route-page="2">2</a></li>
           
            <li class="page-item"><a class="page-link" asp-action="Search" asp-route-name="@ViewBag.SearchWord" asp-route-page="6">Next</a></li>
        </ul>
    </nav>

</div>
